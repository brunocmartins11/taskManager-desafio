{
    "version": 2,
    "builds": [
      { "src": "src/index.hmtl", "use": "@vercel/node" },
      { "src": "src/api/**/*", "use": "@vercel/node" },
      { "src": "public/**/*", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/src/api/$1" },
      { "src": "/(.*)", "dest": "/public/$1" }
    ]
  }
  